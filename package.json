{
  "name": "stock-blog-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for automated stock blog content generation",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node test-railway.js",
    "dev": "tsx src/index.ts",
    "scheduler": "npm run build && node dist/scheduler.js",
    "scheduler:dev": "NODE_ENV=development tsx src/scheduler.ts",
    "test:stocks": "npx tsx src/test/test-stocks.js",
    "test:blog": "npx tsx src/test/test-blog.js",
    "test:email": "npx tsx src/test/test-email.js",
    "test:railway": "npm run build && node test-railway.js",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "cheerio": "^1.1.2",
    "dotenv": "^16.0.0",
    "node-cron": "^3.0.3",
    "nodemailer": "^6.9.0",
    "yahoo-finance2": "^2.13.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^6.4.14",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0"
  }
}
